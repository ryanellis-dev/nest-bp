  "prisma": {
    "seed": "ts-node prisma/seed/index.ts",
    "schema": "./prisma"
  },
  "scripts": {
    "build": "nest build",
    "build:clean": "rm -r dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start | pino-pretty",
    "start:dev": "nest start --watch | pino-pretty --messageKey=message --timestampKey=timestamp --levelLabel=level",
    "start:debug": "nest start --debug --watch | pino-pretty",
    "start:debug-raw": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "vitest run --config ./test/vitest.config.ts",
    "prisma": "prisma",
    "setup:local": "cd local-services && docker compose up --wait && cd .. && prisma migrate reset",
    "setup:local:clean": "cd local-services && docker compose down",
    "data-migration:user_org_m2m": "ts-node ./prisma/migrations/20240401230312_user_org_m2m/data-migration.ts"
  },
