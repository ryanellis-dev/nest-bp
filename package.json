    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "helmet": "8.1.0",
    "nestjs-cls": "6.0.1",
    "nestjs-pino": "^4.4.0",
    "pino-http": "^10.5.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@golevelup/ts-vitest": "^0.5.0",
